{
  "version": 2,
  "git": {
    "deploymentEnabled": true,
    "productionBranch": "production"
  },
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "ignoreCommand": "bash -c 'if [[ \"$VERCEL_GIT_COMMIT_REF\" != \"production\" ]]; then exit 0; else exit 1; fi'",
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "picnic.fan"
        }
      ],
      "destination": "https://www.picnic.fan/$1",
      "permanent": true
    }
  ]

} 